@model IEnumerable<RentalCar.Models.DriverModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriveLisence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthdayDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalJoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverPicturePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistanceTraveled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriveLisence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthdayDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalJoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverPicturePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistanceTraveled)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
