@model RentalCar.Models.OrderModel

@{
    ViewData["Title"] = "Close Order";
}

<h1>Close</h1>
<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CloseOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="AutoID" />
            <input type="hidden" asp-for="DriverID" />
            <input type="hidden" asp-for="OrderStartDate" />

            <div class="align-content-sm-start">
                <a> @Html.DisplayFor(model => model.Auto.FullName)</a>
            </div>
            <div class="align-content-sm-start">
                <a> @Html.DisplayFor(model => model.Driver.FullName)</a>
            </div>
            <div class="control-label">
                <a> @Html.DisplayFor(model => model.OrderStartDate)</a>
            </div>
            <div class="form-group">
                <label asp-for="OrderEndDate" class="control-label"></label>
                <input asp-for="OrderEndDate" class="form-control" />
                <span asp-validation-for="OrderEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderMilleage" class="control-label"></label>
                <input asp-for="OrderMilleage" class="form-control" />
                <span asp-validation-for="OrderMilleage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
